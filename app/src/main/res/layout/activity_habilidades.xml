		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@+id/checkNaturaleza" />

	<CheckBox
		android:id="@+id/checkNaturaleza"
		android:layout_width="104dp"
		android:layout_height="48dp"
		android:layout_marginEnd="20dp"
		android:onClick="habilidadesTotales"
