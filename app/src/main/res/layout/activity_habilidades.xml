	<CheckBox
		android:id="@+id/checkTratoAnimales"
		android:layout_width="128dp"
		android:layout_height="55dp"
		android:layout_marginEnd="4dp"
		android:onClick="habilidadesTotales"
		android:text="@string/tratoAnimales"
		app:layout_constraintEnd_toStartOf="@+id/Enganio"
		app:layout_constraintTop_toTopOf="@+id/checkSupervivencia" />

	<CheckBox
		android:id="@+id/checkSupervivencia"
		android:layout_width="125dp"
		android:layout_height="48dp"
		android:layout_marginTop="28dp"
		android:layout_marginEnd="12dp"
		android:onClick="habilidadesTotales"
		android:text="@string/supervivencia"
		app:layout_constraintEnd_toStartOf="@+id/checkTratoAnimales"
		app:layout_constraintHorizontal_bias="1.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/checkMedicina" />

	<CheckBox
		android:id="@+id/checkIntimidacion"
		android:layout_width="119dp"
		android:layout_height="48dp"
		android:layout_marginTop="24dp"
		android:layout_marginEnd="12dp"
		android:onClick="habilidadesTotales"
		android:text="@string/intimidacion"
		app:layout_constraintEnd_toStartOf="@+id/checkInterpretacion"
