<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center|fill"
	tools:context=".Habilidades">

	<CheckBox
		android:id="@+id/checkAtletismo"
		android:layout_width="112dp"
		android:layout_height="0dp"
		android:layout_marginTop="48dp"
		android:onClick="habilidadesTotales"
		android:text="@string/atletismo"
		app:layout_constraintEnd_toStartOf="@+id/checkAcrobacias"
		app:layout_constraintHorizontal_bias="0.714"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<CheckBox
		android:id="@+id/checkAcrobacias"
		android:layout_width="116dp"
		android:layout_height="48dp"
		android:layout_marginEnd="4dp"
		android:onClick="habilidadesTotales"
		android:text="@string/acrobacias"
