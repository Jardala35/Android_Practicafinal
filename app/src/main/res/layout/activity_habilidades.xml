		app:layout_constraintTop_toBottomOf="@+id/checkAtletismo" />

	<CheckBox
		android:id="@+id/checkArcano"
		android:layout_width="111dp"
		android:layout_height="48dp"
		android:layout_marginEnd="20dp"
		android:onClick="habilidadesTotales"
